---
/**
 * FeatureIcon 组件 - 使用 SVG 替代 emoji
 * 提供一致、专业的图标样式
 */
interface Props {
  name: 'rocket' | 'lock' | 'bolt' | 'computer' | 'arrow-path' | 'globe' | 'check' | 'warning';
  size?: number;
}

const { name, size = 48 } = Astro.props;

