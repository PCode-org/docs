---
/**
 * PlatformIcon 组件 - 平台特定的图标
 */
interface Props {
  platform: 'windows' | 'macos' | 'linux';
  size?: number;
}

const { platform, size = 24 } = Astro.props;

// 平台图标 SVG 路径
const icons = {
  windows: 'M3 12l9-9 9 9M3 12l9 9-9-9m9-9h9m-9 0v9m0-9h-9m9 0l9 9m-9-9v9',
  macos: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  linux: 'M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5',
};

const viewBox = {
  windows: '0 0 24 24',
  macos: '0 0 24 24',
  linux: '0 0 24 24',
};
---

<span class="platform-icon platform-icon--{platform}">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox={viewBox[platform]}
    stroke-width="1.5"
    stroke="currentColor"
    width={size}
    height={size}
  >
    <path stroke-linecap="round" stroke-linejoin="round" d={icons[platform]} />
  </svg>
</span>

<style>
  .platform-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .platform-icon svg {
    transition: transform 0.2s ease-out;
  }

  /* 暗色主题下的图标发光 */
  [data-theme='dark'] .platform-icon svg {
    filter: drop-shadow(0 0 4px rgba(0, 212, 255, 0.3));
  }

  /* 新年主题下的图标 */
  [data-theme='lunar-new-year'] .platform-icon svg {
    filter: drop-shadow(0 0 6px rgba(255, 193, 7, 0.4));
  }

  @media (prefers-reduced-motion: reduce) {
    .platform-icon svg {
      transition: none;
    }
  }
</style>
